<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naim.androidviewpager2withnavigationcomponentexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidViewpager2WithNavigationComponentExample">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".viewpager_bottom_nav.Viewpager2WithBottomNavigationActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="com.naim.androidviewpager2withnavigationcomponentexample.viewpager_bottom_nav.Viewpager2WithBottomNavigationActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity
            android:name=".onlyviewpager2.OnlyViewpager2Activity"
            android:exported="false">
            <intent-filter>
                <action android:name="com.naim.androidviewpager2withnavigationcomponentexample.onlyviewpager2.OnlyViewpager2Activity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>